# rpa-worker-selenium Dockerfile.slim (Optimized Debian Trixie)
# Lightweight Debian Trixie-based image with conditional debug features
# Optimized for Selenium-based RPAs with Chrome, Firefox, and optional PJeOffice
# Default build is minimal - enable optional features via build args

# ============================================================================
# STAGE 1: Builder - Download browsers and drivers
# ============================================================================
FROM debian:trixie-slim AS builder

ARG CHROME_VERSION=142.0.7444.162
# Firefox ESR is downloaded from Mozilla's latest-esr download service
ARG GECKODRIVER_VERSION=0.36.0

ENV DEBIAN_FRONTEND=noninteractive

# Install minimal build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    wget \
    unzip \
    bzip2 \
    xz-utils \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /downloads

# Download Chrome and ChromeDriver from Chrome for Testing
RUN curl -Lo "chromedriver-linux64.zip" "https://storage.googleapis.com/chrome-for-testing-public/${CHROME_VERSION}/linux64/chromedriver-linux64.zip" \
 && curl -Lo "chrome-linux64.zip" "https://storage.googleapis.com/chrome-for-testing-public/${CHROME_VERSION}/linux64/chrome-linux64.zip" \
 && unzip chromedriver-linux64.zip \
 && unzip chrome-linux64.zip \
 && rm -f chromedriver-linux64.zip chrome-linux64.zip

# Download Firefox ESR and GeckoDriver
RUN curl --retry 5 --retry-delay 10 -Lo "firefox.tar.bz2" \
    "https://download.mozilla.org/?product=firefox-esr-latest-ssl&os=linux64&lang=en-US" \
    && tar -xf firefox.tar.bz2 \
    && rm -f firefox.tar.bz2 \
 && curl --retry 5 --retry-delay 10 -Lo "geckodriver.tar.gz" \
    "https://github.com/mozilla/geckodriver/releases/download/v${GECKODRIVER_VERSION}/geckodriver-v${GECKODRIVER_VERSION}-linux64.tar.gz" \
    && tar -zxf geckodriver.tar.gz \
    && rm -f geckodriver.tar.gz

# ============================================================================
# STAGE 2: Runtime - Minimal runtime with optional debug features
# ============================================================================
FROM debian:trixie-slim

# Build arguments for optional features (all default to 0 for minimal image)
ARG BUILD_PJEOFFICE=0
ARG ENABLE_VNC=0
ARG ENABLE_FFMPEG=0
ARG ENABLE_NOVNC=0
ARG ENABLE_PDF_TOOLS=0

LABEL maintainer="nailtongsilva@gmail.com" \
      version="4.0-slim" \
      description="Optimized Debian Trixie Selenium with conditional debug features"

ENV DEBIAN_FRONTEND=noninteractive \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    LANG=C.UTF-8 LC_ALL=C.UTF-8 \
    DISPLAY=:99 \
    SCREEN_WIDTH=1366 \
    SCREEN_HEIGHT=768 \
    HOME=/root \
    TZ=America/Sao_Paulo \
    MOZ_ALLOW_ROOT=1 \
    XDG_RUNTIME_DIR=/tmp/runtime-root

# ============================================================================
# CORE DEPENDENCIES (ALWAYS INSTALLED)
# These are essential for Chrome, Firefox, Selenium, and basic automation
# ============================================================================
RUN apt-get update && apt-get install -y --no-install-recommends \
    # Core system utilities
    ca-certificates \
    gnupg \
    curl \
    wget \
    unzip \
    zip \
    bzip2 \
    xz-utils \
    # Python and build tools (build tools will be removed later)
    python3 \
    python3-pip \
    python3-dev \
    python3-venv \
    build-essential \
    # X11 and display management (minimal set for Xvfb and screenshots)
    xvfb \
    x11-utils \
    # Window manager and automation tools (for certificate dialogs)
    openbox \
    xterm \
    wmctrl \
    xdotool \
    xautomation \
    # Minimal fonts (sufficient for Brazilian sites)
    fontconfig \
    fonts-liberation \
    fonts-dejavu-core \
    # GUI libraries required by Chrome and Firefox (minimal set)
    libgtk-3-0 \
    libdbus-1-3 \
    libdbus-glib-1-2 \
    libx11-6 \
    libx11-xcb1 \
    libxcb1 \
    libxcomposite1 \
    libxdamage1 \
    libxext6 \
    libxfixes3 \
    libxrandr2 \
    libxrender1 \
    libxss1 \
    libxt6 \
    libxtst6 \
    libxkbcommon0 \
    # Graphics and rendering (minimal for Chrome/Firefox)
    libgl1 \
    libglu1-mesa \
    libvulkan1 \
    libgbm1 \
    libdrm2 \
    # NSS and certificate handling
    libnss3 \
    libnss3-tools \
    libnspr4 \
    p11-kit \
    p11-kit-modules \
    # Process management
    procps \
    psmisc \
    # Cryptography and certificate tools
    openssl \
    # Cups for printing support (sometimes needed for certificate dialogs)
    libcups2 \
    # AT-SPI accessibility (required for some GTK dialogs)
    at-spi2-core \
    libatk1.0-0 \
    libatk-bridge2.0-0 \
    # Cairo graphics
    libcairo2 \
    libpangocairo-1.0-0 \
    libpango-1.0-0 \
    # Additional dependencies
    libu2f-udev \
    libappindicator3-1 \
    # Security tools
    sudo \
    # D-Bus for inter-process communication (critical for dialogs)
    dbus \
    dbus-x11 \
    # Java runtime for PJeOffice and other Java-based signers
    openjdk-21-jre-headless \
    && rm -rf /var/lib/apt/lists/*

# ============================================================================
# OPTIONAL: VNC server (installed only when ENABLE_VNC=1)
# Used for remote debugging and visual inspection
# ============================================================================
RUN if [ "$ENABLE_VNC" = "1" ]; then \
    echo "Installing VNC support..."; \
    apt-get update && apt-get install -y --no-install-recommends \
        x11vnc \
    && rm -rf /var/lib/apt/lists/*; \
fi

# ============================================================================
# OPTIONAL: FFmpeg (installed only when ENABLE_FFMPEG=1)
# Used for screen recording during debugging
# ============================================================================
RUN if [ "$ENABLE_FFMPEG" = "1" ]; then \
    echo "Installing FFmpeg..."; \
    apt-get update && apt-get install -y --no-install-recommends \
        ffmpeg \
    && rm -rf /var/lib/apt/lists/*; \
fi

# ============================================================================
# OPTIONAL: PDF tools (installed only when ENABLE_PDF_TOOLS=1)
# ImageMagick and Ghostscript for PDF manipulation/signing
# Note: PDF signing can be delegated to external APIs in most cases
# ============================================================================
RUN if [ "$ENABLE_PDF_TOOLS" = "1" ]; then \
    echo "Installing PDF tools (ImageMagick + Ghostscript)..."; \
    apt-get update && apt-get install -y --no-install-recommends \
        imagemagick \
        ghostscript \
    && rm -rf /var/lib/apt/lists/*; \
fi

# Create and activate virtual environment for PEP 668 compliance
# Debian Trixie enforces externally-managed Python environment
RUN python3 -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Copy Chrome and ChromeDriver from builder stage
COPY --from=builder /downloads/chrome-linux64 /opt/chrome
COPY --from=builder /downloads/chromedriver-linux64/chromedriver /usr/local/bin/chromedriver

# Copy Firefox and GeckoDriver from builder stage
COPY --from=builder /downloads/firefox /opt/firefox/
COPY --from=builder /downloads/geckodriver /usr/local/bin/geckodriver

# Create symbolic links and set permissions for Chrome
RUN ln -s /opt/chrome/chrome /usr/local/bin/chrome \
    && ln -s /opt/chrome/chrome /usr/local/bin/google-chrome \
    && chmod +x /usr/local/bin/chromedriver \
    && chmod +x /opt/chrome/chrome

# Create symbolic links and set permissions for Firefox
RUN ln -s /opt/firefox/firefox /usr/local/bin/firefox \
    && chmod +x /usr/local/bin/geckodriver \
    && chmod +x /opt/firefox/firefox

# Create symlinks for Python (Debian Trixie uses Python 3.12 by default)
RUN ln -sf /usr/bin/python3 /usr/bin/python

# Create non-root user with proper groups for GUI access
RUN useradd -m -d /app -u 1000 -s /bin/bash rpauser \
    && echo "rpauser ALL=(ALL) NOPASSWD: ALL" >> /etc/sudoers \
    && usermod -aG video,render rpauser

# Set up working directory structure
WORKDIR /app
RUN mkdir -p /app/src /app/logs /app/tmp /app/recordings \
    /app/.pki/nssdb \
    /app/.cache \
    /app/.config \
    /app/.local/share \
    /root/.pki/nssdb \
    /root/.cache \
    /root/.config \
    /root/.local/share \
    /data \
    && chmod 1777 /app/tmp \
    && chmod 700 /app/.pki/nssdb \
    && chmod 700 /root/.pki/nssdb \
    && chmod 777 /data \
    && chmod 777 /app/recordings \
    && chown -R rpauser:rpauser /app

# =============================================================================
# A1 PERSONAL CERTIFICATE SUPPORT (RUNTIME MANAGEMENT)
# =============================================================================
# The NSS database for Chrome client certificates (.pfx/.p12) is managed at
# runtime by Python code, not pre-initialized here. This ensures:
#   1. Only ONE personal certificate exists at any time (single-cert policy)
#   2. Python can fully control the certificate lifecycle (import/rotate/remove)
#   3. Certificates are never baked into the image (security best practice)
#
# Runtime Python Flow:
#   - Receives .pfx file via API (never in image)
#   - Creates/resets ~/.pki/nssdb using: certutil -N -d sql:$HOME/.pki/nssdb --empty-password
#   - Imports certificate using: pk12util -i /tmp/cert.pfx -d sql:$HOME/.pki/nssdb -W <password> -n <nickname>
#   - Writes Chrome policy to /etc/opt/chrome/policies/managed/auto_select_certificate.json
#   - Starts Chrome via Selenium (--headless=new supported)
#   - Removes certificate after task: certutil -D -d sql:$HOME/.pki/nssdb -n <nickname>
#
# The directories are created with proper permissions but remain empty until runtime.
# =============================================================================

# Create Chrome policy directory for AutoSelectCertificateForUrls
# Python will write JSON policy files here at runtime
# Set ownership to rpauser to allow direct write access without sudo
RUN mkdir -p /etc/opt/chrome/policies/managed \
    && chown -R rpauser:rpauser /etc/opt/chrome/policies/managed \
    && chmod 755 /etc/opt/chrome/policies/managed

# Set up OpenBox configuration to prevent menu warnings
RUN mkdir -p /var/lib/openbox && \
    echo '<?xml version="1.0" encoding="UTF-8"?>' > /var/lib/openbox/debian-menu.xml && \
    echo '<openbox_menu xmlns="http://openbox.org/3.4/menu">' >> /var/lib/openbox/debian-menu.xml && \
    echo '    <menu id="root-menu" label="Openbox 3">' >> /var/lib/openbox/debian-menu.xml && \
    echo '        <item label="Terminal">' >> /var/lib/openbox/debian-menu.xml && \
    echo '            <action name="Execute"><command>xterm</command></action>' >> /var/lib/openbox/debian-menu.xml && \
    echo '        </item>' >> /var/lib/openbox/debian-menu.xml && \
    echo '    </menu>' >> /var/lib/openbox/debian-menu.xml && \
    echo '</openbox_menu>' >> /var/lib/openbox/debian-menu.xml && \
    chmod 644 /var/lib/openbox/debian-menu.xml

# ============================================================================
# OPTIONAL: PJeOffice (controlled by BUILD_PJEOFFICE build argument)
# Brazilian legal system digital signature tool
# ============================================================================
RUN if [ "$BUILD_PJEOFFICE" = "1" ]; then \
    echo "Installing PJeOffice..."; \
    mkdir -p /opt/pjeoffice && \
    cd /tmp && \
    curl -Lo "pjeoffice.zip" "https://pje-office.pje.jus.br/pro/pjeoffice-pro-v2.5.16u-linux_x64.zip" && \
    unzip pjeoffice.zip && \
    cp -r pjeoffice-pro/* /opt/pjeoffice/ && \
    rm -rf pjeoffice.zip pjeoffice-pro && \
    chown -R rpauser:rpauser /opt/pjeoffice && \
    chmod -R 755 /opt/pjeoffice && \
    chmod +x /opt/pjeoffice/pjeoffice-pro.sh && \
    mkdir -p /app/.pjeoffice-pro && \
    chown -R rpauser:rpauser /app/.pjeoffice-pro && \
    chmod -R 755 /app/.pjeoffice-pro; \
fi

# Install Python dependencies (using virtual environment)
COPY requirements.txt .
RUN pip install --upgrade --no-cache-dir pip \
    && pip install --no-cache-dir -r requirements.txt \
    && chmod -R 777 /opt/venv/lib/python*/site-packages/seleniumbase/drivers || true \
    && rm -rf /root/.cache/pip

# ============================================================================
# OPTIONAL: noVNC and websockify (installed only when ENABLE_NOVNC=1)
# Browser-based VNC access for remote debugging
# Requires git to clone noVNC, which is removed after installation
# ============================================================================
RUN if [ "$ENABLE_NOVNC" = "1" ]; then \
    echo "Installing noVNC and websockify..."; \
    apt-get update && apt-get install -y --no-install-recommends git && \
    mkdir -p /opt/novnc && \
    git clone --depth 1 https://github.com/novnc/noVNC.git /opt/novnc && \
    ln -s /opt/novnc/vnc.html /opt/novnc/index.html && \
    pip install --no-cache-dir websockify && \
    ln -s /opt/venv/bin/websockify /usr/local/bin/websockify && \
    apt-get purge -y git && \
    apt-get autoremove -y && \
    rm -rf /var/lib/apt/lists/* /root/.cache/pip; \
fi

# Copy application files
COPY . .

# Make entrypoint script executable
RUN chmod +x /app/entrypoint.sh /app/script_downloader.py /app/smoke_test.py

# Set up D-Bus for GUI applications
RUN mkdir -p /var/run/dbus \
    && chown rpauser:rpauser /var/run/dbus

# Set ownership of virtual environment for rpauser
RUN chown -R rpauser:rpauser /opt/venv

# Ensure runtime directory exists for Firefox sandbox when running as root
RUN mkdir -p /tmp/runtime-root \
    && chmod 700 /tmp/runtime-root

# ============================================================================
# CLEANUP: Remove build tools to reduce image size
# Build tools are only needed during pip install, not at runtime
# ============================================================================
RUN apt-get purge -y \
    build-essential \
    python3-dev \
    && apt-get autoremove -y \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Environment variables for control (all optional; defaults to lightweight/headless)
ENV USE_XVFB=0 \
    USE_OPENBOX=0 \
    USE_VNC=0 \
    USE_NOVNC=0 \
    USE_PJEOFFICE=0 \
    USE_SCREEN_RECORDING=0 \
    VNC_PORT=5900 \
    NOVNC_PORT=6080 \
    RECORDING_DIR=/app/recordings \
    XDG_CACHE_HOME=/root/.cache \
    XDG_CONFIG_HOME=/root/.config \
    XDG_DATA_HOME=/root/.local/share

# Health check to ensure browsers are available
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD chrome --version && firefox --version || exit 1

# Pre-download drivers as root
RUN python -c "from seleniumbase import Driver; d = Driver(uc=True, incognito=True, headless=True); \
    d.get('https://www.n3wizards.com/health'); print(d.title); d.quit()" || true

# Run as root user (rpauser kept for compatibility but not used)
# USER rpauser

# Set up entrypoint for dynamic script execution with download support
ENTRYPOINT ["/app/entrypoint.sh"]

# Default command (can be overridden)
CMD ["python", "--version"]
